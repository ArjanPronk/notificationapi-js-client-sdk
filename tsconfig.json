{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES5",
    "strict": true,
    "lib": ["ES6", "DOM"],
    "declaration": true,
    "outDir": "./lib",
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "include": ["src"]
}
