{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "lib": ["ES6", "DOM"],
    "declaration": true,
    "outDir": "./lib",
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*", "**/__mocks__/*"]
}
